<h1>Edit: {{course.title}}</h1>

<form action="/courses/edit" method="POST">
         <div class="input-field">
                  <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
                  <label for="title"> Course title</label>
                  <span class="helper-text" data-error="enter the title" data-success="right"></span>
         </div>

         <div class="input-field">
                  <input id="price" name="price" type="number" class="validate" required min="1"
                           value="{{course.price}}">
                  <label for="price"> Course price</label>
                  <span class="helper-text" data-error="enter the price" data-success="right"></span>
         </div>

         <div class="input-field">
                  <input id="img" name="img" type="text" class="validate" required value={{course.img}}>
                  <label for="img">Images</label>
                  <span class="helper-text" data-error="add image URL" data-success="right"></span>
         </div>

         <input type="hidden" name="id" value="{{course.id}}">

         <button class="btn btn-primary">Submit changes</button>
</form>