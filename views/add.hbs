<h1>Add new course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title"> Course title</label>
        <span class="helper-text" data-error="enter the title" data-success="right"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1">
        <label for="price"> Course price</label>
        <span class="helper-text" data-error="enter the price" data-success="right"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">Images</label>
        <span class="helper-text" data-error="add image URL" data-success="right"></span>
    </div>

    <button class="btn btn-primary">Add course</button>
</form>